inherit gnome2

DESCRIPTION="GNOME document viewer"
HOMEPAGE="http://www.gnome.org/projects/evince/"
PATCH_URI="2.22.2-no-undefined.patch"

CYGCONF_ARGS="
	--enable-comics
	--enable-dbus
	--enable-djvu
	--enable-dvi
	--enable-impress
	--enable-nautilus
	--enable-pdf
	--enable-pixbuf
	--enable-ps
	--enable-t1lib
	--enable-thumbnailer
	--enable-tiff
"

PKG_NAMES="${PN} nautilus-${PN}"
evince_CONTENTS="--exclude=usr/lib/nautilus etc/ usr/"
nautilus_evince_CONTENTS="usr/lib/nautilus/"
