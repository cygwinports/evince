inherit gnome2

DESCRIPTION="GNOME document viewer"
HOMEPAGE="http://www.gnome.org/projects/evince/"

CYGCONF_ARGS="
	--enable-comics
	--enable-dbus
	--enable-djvu
	--enable-dvi
	--enable-impress
	--enable-nautilus
	--enable-pdf
	--enable-pixbuf
	--enable-ps
	--enable-t1lib
	--enable-thumbnailer
	--enable-tiff
"

PKG_NAMES="${PN} nautilus-${PN}"
PKG_HINTS="setup nautilus"
PKG_CONTENTS[0]="--exclude=usr/lib/nautilus etc/ usr/"
PKG_CONTENTS[1]="usr/lib/nautilus/"
